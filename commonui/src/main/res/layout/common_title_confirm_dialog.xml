<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/common_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/color_31"
        android:textSize="@dimen/common_text_size_20" />

    <TextView
        android:id="@+id/common_confirm_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:gravity="left"
        android:textColor="@color/common_confirm_content_text_color"
        android:textSize="16dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/common_confirm_cancel_btn"
                style="@style/new_ui.dialog_btn"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/common_confirm_cancel_btn"
                android:textColor="@color/common_confirm_cancel_text_color" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/common_confirm_ok_btn"
                style="@style/new_ui.dialog_btn"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/common_confirm_ok_btn"
                android:gravity="center"
                android:textColor="@color/common_confirm_ok_text_color" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>