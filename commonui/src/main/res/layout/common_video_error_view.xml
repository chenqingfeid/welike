<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black">

    <LinearLayout
        android:id="@+id/common_error_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/common_error_reload"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="center"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/common_video_error_icon" />

        <TextView
            android:id="@+id/common_error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="30dp"
            tools:text ="The connection to the server timed out"
            android:textColor="@color/white"
            android:textSize="@dimen/common_error_view_text_size" />

    </LinearLayout>

</FrameLayout>