<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/cancel_action_btn"
        android:layout_width="24dp"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        android:padding="4dp"
        app:srcCompat = "@drawable/common_dialog_cancel"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/common_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:textColor="@color/common_confirm_title_text_color"
        android:textSize="@dimen/common_confirm_title_text_size" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/common_confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/common_confirm_ok_btn"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/common_confirm_cancel_text_size" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>