<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="296dp"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/common_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:textColor="@color/color_31"
        android:textSize="@dimen/common_confirm_title_text_size" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/common_confirm_cancel_btn"
                style="@style/new_ui.dialog_btn"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/common_confirm_cancel_btn"
                android:textColor="@color/color_31" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/common_confirm_ok_btn"
                style="@style/new_ui.dialog_btn"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/common_confirm_ok_btn"
                android:textColor="@color/white" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>