<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="54dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/interest_category_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        fresco:roundAsCircle="true"
        fresco:placeholderImage="@drawable/interest_category_default"
        fresco:placeholderImageScaleType="fitCenter" />

    <TextView
        android:id="@+id/interest_category"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/common_check_green"
        android:paddingRight="15dp"
        android:textColor="@color/interest_category_text_color"
        android:textSize="@dimen/common_text_size_18" />

</LinearLayout>