<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_item_margin_12"
        android:paddingTop="6dp"
        android:textColor="@color/color_31"
        android:textSize="@dimen/common_text_size_14"
        android:textStyle="bold"
        Tools:text="Follow your interested person" />

    <TextView
        android:id="@+id/tv_more_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/common_item_margin_12"
        android:textColor="@color/color_normal_48779D"
        android:textSize="@dimen/common_text_size_14"
        android:textStyle="bold"
        Tools:text="More"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_title" />

</android.support.constraint.ConstraintLayout>