<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_setting_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">



    <include
        android:id="@+id/mine_setting_language_top"
        layout="@layout/common_action_bar" />


    <View
        android:id="@+id/view_top_div"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/mine_setting_language_top" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_top_div"
        android:background="@drawable/common_b_t_shadow">


        <ListView
            android:id="@+id/lv_regist_choose_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="1dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_setting_language_save_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/mine_setting_language_save"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/common_orange_dark_btn_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>
</RelativeLayout>
