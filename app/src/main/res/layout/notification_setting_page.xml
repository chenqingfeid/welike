<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include layout="@layout/common_action_bar" />

    <ScrollView
        android:id="@+id/push_scroll"
        android:background="@color/common_setting_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_notification_reminder_tips"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="@dimen/common_item_margin_12"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/common_item_margin_8"
                android:textSize="14dp"
                tools:text="Notification Reminder" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_b_t_shadow"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_notification_repost"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_notification_repost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/common_text_color_31"
                        android:textSize="@dimen/common_text_size_14"
                        android:textStyle="bold"
                        tools:text="Repost" />

                    <com.redefine.commonui.widget.switchbtn.SwitchButton
                        android:id="@+id/switch_notification_repost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/common_item_margin_12"
                        app:kswBackDrawable="@drawable/setting_switch"
                        app:kswThumbColor="@color/setting_switch_color" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

                <LinearLayout
                    android:id="@+id/ll_notification_comment"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_notification_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/common_text_color_31"
                        android:textSize="@dimen/common_text_size_14"
                        android:textStyle="bold"
                        tools:text="Commemt" />

                    <com.redefine.commonui.widget.switchbtn.SwitchButton
                        android:id="@+id/switch_notification_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/common_item_margin_12"
                        app:kswBackDrawable="@drawable/setting_switch"
                        app:kswThumbColor="@color/setting_switch_color" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_notification_like"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_notification_like"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/common_text_color_31"
                        android:textSize="@dimen/common_text_size_14"
                        android:textStyle="bold"
                        tools:text="Like" />

                    <com.redefine.commonui.widget.switchbtn.SwitchButton
                        android:id="@+id/switch_notification_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/common_item_margin_12"
                        app:kswBackDrawable="@drawable/setting_switch"
                        app:kswThumbColor="@color/setting_switch_color" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_notification_follow"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_notification_follow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/common_text_color_31"
                        android:textSize="@dimen/common_text_size_14"
                        android:textStyle="bold"
                        tools:text="Follow" />

                    <com.redefine.commonui.widget.switchbtn.SwitchButton
                        android:id="@+id/switch_notification_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/common_item_margin_12"
                        app:kswBackDrawable="@drawable/setting_switch"
                        app:kswThumbColor="@color/setting_switch_color" />

                </LinearLayout>
            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:background="@color/common_divider_color" />-->


            <TextView
                android:id="@+id/tv_notification_im_message_tips"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:textColor="@color/notification_mute_tips"
                android:textSize="14dp"
                tools:text="From whom I'll receive messages" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_b_t_shadow"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_notification_im_message"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_notification_im_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/common_text_color_31"
                        android:textSize="@dimen/common_text_size_14"
                        android:textStyle="bold"
                        tools:text="Message from friend" />

                    <com.redefine.commonui.widget.switchbtn.SwitchButton
                        android:id="@+id/switch_notification_im_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/common_item_margin_12"
                        app:kswBackDrawable="@drawable/setting_switch"
                        app:kswThumbColor="@color/setting_switch_color" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

                <LinearLayout
                    android:id="@+id/ll_notification_stranger_im_message"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_notification_stranger_im_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/common_text_color_31"
                        android:textSize="@dimen/common_text_size_14"
                        android:textStyle="bold"
                        tools:text="Message from stranger" />

                    <com.redefine.commonui.widget.switchbtn.SwitchButton
                        android:id="@+id/switch_notification_stranger_im_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/common_item_margin_12"
                        app:kswBackDrawable="@drawable/setting_switch"
                        app:kswThumbColor="@color/setting_switch_color" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_notification_new_post_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:minHeight="37dp"
                android:paddingTop="@dimen/common_item_margin_8"
                android:textColor="@color/notification_mute_tips"
                android:textSize="14dp"
                tools:text="Receive notification from people I'm following" />


            <LinearLayout
                android:id="@+id/ll_notification_new_post"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/common_b_t_shadow"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_notification_new_post"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/common_text_color_31"
                    android:textSize="@dimen/common_text_size_14"
                    android:textStyle="bold"
                    tools:text="New Post" />

                <com.redefine.commonui.widget.switchbtn.SwitchButton
                    android:id="@+id/switch_notification_new_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/common_item_margin_12"
                    app:kswBackDrawable="@drawable/setting_switch"
                    app:kswThumbColor="@color/setting_switch_color" />

            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:background="@color/common_div_color" />-->


            <TextView
                android:id="@+id/tv_notification_scheduled_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:minHeight="37dp"
                android:paddingTop="@dimen/common_item_margin_8"
                android:textColor="@color/notification_mute_tips"
                android:textSize="14dp"
                tools:text="Do not disturb" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_b_t_shadow"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_notification_scheduled"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_notification_scheduled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/common_text_color_31"
                        android:textSize="@dimen/common_text_size_14"
                        android:textStyle="bold"
                        tools:text="Scheduled" />

                    <com.redefine.commonui.widget.switchbtn.SwitchButton
                        android:id="@+id/switch_notification_scheduled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/common_item_margin_12"
                        app:kswBackDrawable="@drawable/setting_switch"
                        app:kswThumbColor="@color/setting_switch_color" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_quite_time"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_mute_start"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:textColor="@color/common_text_color_afb0b1"
                                android:textSize="16dp"
                                tools:text="From" />

                            <TextView
                                android:id="@+id/tv_mute_start_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="15dp"
                                android:textColor="@color/notification_mute_time"
                                android:textSize="16dp"
                                tools:text="22:00" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_mute_end"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:textColor="@color/common_text_color_afb0b1"
                                android:textSize="16dp"
                                tools:text="To" />

                            <TextView

                                android:id="@+id/tv_mute_end_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="15dp"
                                android:textColor="@color/notification_mute_time"
                                android:textSize="16dp"
                                tools:text="07:00" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/common_left_arrow_icon" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>