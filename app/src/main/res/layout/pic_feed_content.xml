<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forward_feed_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.redefine.welike.commonui.view.FeedPicMultiGridView
        android:id="@+id/pic_feed_multi_grid_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="6dp" />


    <TextView
        android:id="@+id/tv_post_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_item_margin_12"
        android:layout_marginTop="@dimen/common_item_margin_18"
        android:background="@drawable/app_common_btn_40_bark_bg"
        android:paddingBottom="3.5dp"
        android:paddingLeft="@dimen/common_item_margin_6"
        android:paddingRight="@dimen/common_item_margin_6"
        android:paddingTop="3.5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_12"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1111111" />
</android.support.constraint.ConstraintLayout>