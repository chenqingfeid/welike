<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.redefine.welike.commonui.widget.VipAvatar
        android:id="@+id/face_to_face_small_head"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:actualImageScaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/common_stranger_head"
        app:placeholderImageScaleType="centerCrop"
        app:roundAsCircle="true"
        app:roundingBorderColor="@color/white"
        app:roundingBorderPadding="2dp" />

    <com.redefine.welike.commonui.widget.SmallUserFollowBtn
        android:id="@+id/face_to_face_small_follow_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/face_to_face_small_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/common_text_size_12"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/face_to_face_small_head"
        app:layout_constraintStart_toStartOf="@id/face_to_face_small_head"
        app:layout_constraintTop_toBottomOf="@id/face_to_face_small_follow_btn" />


</android.support.constraint.ConstraintLayout>