<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/bg"
        android:layout_width="28dp"
        android:layout_height="28dp"
        fresco:actualImageResource="@color/white"
        fresco:backgroundImage="@color/white"
        fresco:roundAsCircle="true" />

    <com.redefine.welike.commonui.widget.VipAvatar
        android:id="@+id/topic_landing_user_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        fresco:placeholderImage="@drawable/user_default_head"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundAsCircle="true" />
</android.support.constraint.ConstraintLayout>