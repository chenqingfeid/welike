<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/white">

    <com.redefine.welike.commonui.widget.VipAvatar
        android:id="@+id/contact_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fresco:fadeDuration="300"
        fresco:placeholderImage="@drawable/user_default_head"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundAsCircle="true"
        tools:background="@drawable/alien" />

    <TextView
        android:id="@+id/contact_name"
        style="@style/new_ui.text_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="18dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/contact_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Brett Hunter Brett Hunter Brett Hunter" />

    <TextView
        android:id="@+id/contact_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:textColor="@color/main_grey"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/contact_name"
        app:layout_constraintRight_toRightOf="@+id/contact_name"
        app:layout_constraintTop_toBottomOf="@+id/contact_name"
        tools:text="Invite Ollie Silva Ollie Silva Ollie Silva Ollie Silva" />

    <com.redefine.welike.commonui.widget.UserFollowBtn
        android:id="@+id/follow"
        android:layout_width="76dp"
        android:layout_height="29dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/invite"
        style="@style/new_ui.button_1"
        android:layout_width="76dp"
        android:layout_height="29dp"
        android:layout_marginRight="15dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="INVITE" />

    <View
        style="@style/new_ui.div"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/contact_name"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>