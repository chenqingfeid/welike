<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_setting_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include layout="@layout/common_action_bar" />

    <!--<View-->
    <!--style="@style/new_ui.div"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1px" />-->

    <TextView
        android:id="@+id/tv_contact_title"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="@dimen/common_item_margin_8"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_item_margin_12"
        android:paddingRight="@dimen/common_item_margin_12"
        android:textColor="@color/common_text_black_62"
        android:textSize="@dimen/common_text_size_14" />


    <LinearLayout
        android:id="@+id/setting_contacts_model"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/common_b_t_shadow"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_setting_find_contacts_model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_item_margin_12"
            android:layout_weight="1"
            android:textColor="@color/common_text_color_31"
            android:textSize="@dimen/common_text_size_14"
            android:textStyle="bold" />

        <com.redefine.commonui.widget.switchbtn.SwitchButton
            android:id="@+id/setting_mobile_contacts_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_item_margin_12"
            app:kswBackDrawable="@drawable/setting_switch"
            app:kswThumbColor="@color/setting_switch_color" />

    </LinearLayout>

    <TextView
        android:id="@+id/setting_privacy_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/common_item_margin_8"
        android:paddingLeft="@dimen/common_item_margin_12"
        android:paddingRight="@dimen/common_item_margin_12"
        android:paddingTop="@dimen/common_item_margin_4"
        android:text="1111111111"
        android:textColor="@color/common_text_color_afb0b1"
        android:textSize="@dimen/common_text_size_12" />


    <LinearLayout
        android:id="@+id/setting_follow_model"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/common_b_t_shadow"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_setting_follow_model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_item_margin_12"
            android:layout_weight="1"
            android:textColor="@color/common_text_color_31"
            android:textSize="@dimen/common_text_size_14"
            android:textStyle="bold" />

        <com.redefine.commonui.widget.switchbtn.SwitchButton
            android:id="@+id/setting_follow_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_item_margin_12"
            app:kswBackDrawable="@drawable/setting_switch"
            app:kswThumbColor="@color/setting_switch_color" />

    </LinearLayout>

    <TextView
        android:id="@+id/setting_follow_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/common_item_margin_8"
        android:paddingLeft="@dimen/common_item_margin_12"
        android:paddingRight="@dimen/common_item_margin_12"
        android:paddingTop="@dimen/common_item_margin_4"
        android:text="1111111111"
        android:textColor="@color/common_text_color_afb0b1"
        android:textSize="@dimen/common_text_size_12" />

    <View
        style="@style/new_ui.div"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/tv_mobile_title"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_item_margin_12"
        android:paddingRight="@dimen/common_item_margin_12"
        android:text="1111111111"
        android:textColor="@color/common_text_black_62"
        android:textSize="@dimen/common_text_size_14" />


        <LinearLayout
            android:id="@+id/setting_mobile_model"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/common_b_t_shadow"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_setting_mobile_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_item_margin_12"
                android:layout_weight="1"
                android:textColor="@color/common_text_color_31"
                android:textSize="@dimen/common_text_size_14"
                android:textStyle="bold" />

            <com.redefine.commonui.widget.switchbtn.SwitchButton
                android:id="@+id/setting_mobile_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/common_item_margin_12"
                app:kswBackDrawable="@drawable/setting_switch"
                app:kswThumbColor="@color/setting_switch_color" />

        </LinearLayout>

    <TextView
        android:id="@+id/setting_phone_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/common_item_margin_8"
        android:paddingLeft="@dimen/common_item_margin_12"
        android:paddingRight="@dimen/common_item_margin_12"
        android:paddingTop="@dimen/common_item_margin_4"
        android:text="1111111111"
        android:textColor="@color/common_text_color_afb0b1"
        android:textSize="@dimen/common_text_size_12" />

    <View
        style="@style/new_ui.div"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_privacy_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="@dimen/common_item_margin_12"
        android:paddingRight="@dimen/common_item_margin_12"
        android:paddingTop="12dp"
        android:text="1111111111"
        android:textColor="@color/common_text_color_afb0b1"
        android:textSize="@dimen/common_text_size_12"
        android:visibility="visible" />


</LinearLayout>
