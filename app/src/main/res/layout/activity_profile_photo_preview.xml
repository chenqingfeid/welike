<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.redefine.multimedia.picturelooker.widget.PicturePreView
        android:id="@+id/picturePreView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@+id/profile_photo_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        
        <ImageView
            android:id="@+id/profile_photo_title_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:src="@drawable/common_white_back_btn"/>

        <ImageView
            android:id="@+id/profile_photo_title_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="16dp"
            app:srcCompat="@drawable/profile_share_icon"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <com.redefine.richtext.RichTextView
        android:id="@+id/profile_photo_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_size_14"
        android:textColor="@color/white"
        android:padding="12dp"
        android:background="@drawable/art_gradient_top"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="hahahahah hahahahaha ahahaha hahahaha hhahahahaha"/>

</android.support.constraint.ConstraintLayout>