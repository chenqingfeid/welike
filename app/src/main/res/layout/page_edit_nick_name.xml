<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_action_bar" />

    <View
        style="@style/new_ui.div"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/tv_edit_nickname_attention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_item_margin_8"
        android:layout_marginLeft="@dimen/common_item_margin_12"
        android:layout_marginRight="@dimen/common_item_margin_12"
        android:layout_marginTop="@dimen/common_item_margin_8"
        android:textColor="@color/main_grey"
        android:textSize="@dimen/common_text_size_14" />

    <include layout="@layout/edit_nickname_layout" />

    <View
        android:id="@+id/edit_name_dv"
        style="@style/new_ui.div"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="@dimen/common_item_margin_12"
        android:layout_marginRight="@dimen/common_item_margin_12" />

    <TextView
        android:id="@+id/tv_edit_nick_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_item_margin_12"
        android:layout_marginRight="@dimen/common_item_margin_12"
        android:layout_marginTop="8dp"
        android:textColor="@color/main_error"
        android:textSize="@dimen/common_text_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/btn_user_edit_name_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/main_grey"
        android:textSize="@dimen/common_text_size_16"
        android:textStyle="bold" />

</LinearLayout>