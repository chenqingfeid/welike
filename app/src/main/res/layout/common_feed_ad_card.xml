<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ad_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:background="@color/common_color_ee">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_ad_pic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="25:14"
        app:placeholderImage="@drawable/interest_category_default"
        app:placeholderImageScaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_post_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_item_margin_12"
        android:layout_marginTop="@dimen/common_item_margin_12"
        android:background="@drawable/app_common_btn_40_bark_bg"
        android:paddingBottom="3.5dp"
        android:paddingLeft="@dimen/common_item_margin_6"
        android:paddingRight="@dimen/common_item_margin_6"
        android:paddingTop="3.5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_12"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1111111" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/common_item_margin_12"
        android:paddingLeft="@dimen/common_item_margin_12"
        android:paddingRight="8dp"
        android:paddingTop="@dimen/common_item_margin_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_ad_pic">


        <TextView
            android:id="@+id/common_feed_active_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_item_margin_12"
            android:layout_marginRight="@dimen/common_item_margin_12"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_31"
            android:textSize="@dimen/common_text_size_14"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/common_feed_active_desc"
            app:layout_constraintEnd_toStartOf="@+id/tv_common_feed_active_join"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3 Smart Reasons Why You Sho Consider Paying" />


        <TextView
            android:id="@+id/common_feed_active_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_item_margin_12"
            android:layout_marginRight="@dimen/common_item_margin_12"
            android:layout_marginTop="@dimen/common_item_margin_6"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/main_grey"
            android:textSize="@dimen/common_text_size_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_common_feed_active_join"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/common_feed_active_title"
            tools:text="3 Smart Reasons Why You Sho Consider Payimart Reasons Why You Sho Consider Pmart Reasons Why You Sho Consider Png" />


        <TextView
            android:id="@+id/tv_common_feed_active_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_btn_blue_stroke_bg"
            android:paddingBottom="@dimen/common_item_margin_4"
            android:paddingLeft="@dimen/common_item_margin_12"
            android:paddingRight="@dimen/common_item_margin_12"
            android:paddingTop="@dimen/common_item_margin_4"
            android:text="@string/common_join"
            android:textColor="@color/color_859EBC"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/common_login" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>