<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_intro_bg"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/guide_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="@drawable/common_intro_text_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="13dp"
        android:paddingLeft="27dp"
        android:paddingRight="27dp"
        android:paddingTop="2dp">


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="20dp"
            android:layout_height="39dp"
            android:src="@drawable/intro_logo" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/common_item_margin_4"
            android:drawablePadding="@dimen/common_item_margin_18"
            android:gravity="center"
            android:text="@string/gravity_center"
            android:textColor="@color/main_orange_dark"
            android:textSize="26dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/guide_dots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/ll_common_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/common_item_margin_12"
            android:layout_marginRight="@dimen/common_item_margin_12"
            android:layout_marginTop="@dimen/common_item_margin_16"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_item_margin_16">

            <TextView
                android:id="@+id/tv_common_next"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/common_appcolor_btn_new_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size_20"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
