<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/common_item_margin_24">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/common_btn_close" />

    <TextView
        android:id="@+id/tv_choose_language_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_item_margin_12"
        android:layout_marginTop="@dimen/common_item_margin_12"
        android:paddingRight="@dimen/common_item_margin_12"
        android:text="@string/regist_select_language"
        android:textColor="@color/color_31"
        android:textSize="@dimen/common_text_size_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_choose_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/common_item_margin_18"
        android:paddingLeft="@dimen/common_item_margin_12"
        android:paddingRight="@dimen/common_item_margin_12"
        app:layout_constraintTop_toBottomOf="@+id/tv_choose_language_title" />


</android.support.constraint.ConstraintLayout>
