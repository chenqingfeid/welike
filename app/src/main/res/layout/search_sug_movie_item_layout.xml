<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">

    <android.support.v7.widget.AppCompatImageView

        android:id="@+id/flag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_search_sug_movie_flag"/>
    <TextView
        android:id="@+id/movie_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="sanju(2018)"
        app:layout_constraintLeft_toRightOf="@+id/flag"
        app:layout_constraintRight_toLeftOf="@+id/search_sug_btn"
        android:ellipsize="end"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/search_sug_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/search_sug_arrow_icon" />
    <View
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_px1"
        android:background="@color/common_search_item_divider"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
       />
</android.support.constraint.ConstraintLayout>