<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="12dp">

    <com.redefine.welike.commonui.widget.VipAvatar
        android:id="@+id/feed_detail_forward_user_head"
        android:layout_width="@dimen/feed_detail_head_size"
        android:layout_height="@dimen/feed_detail_head_size"
        android:layout_marginTop="8dp"
        fresco:fadeDuration="300"
        fresco:placeholderImage="@drawable/user_default_head"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundAsCircle="true" />


    <TextView
        android:id="@+id/feed_detail_forward_user_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="@dimen/common_item_margin_12"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/feed_detail_forward_user_head"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/feed_detail_item_user_nick_text_color"
        android:textSize="@dimen/common_text_size_13"
        android:textStyle="bold"
        tools:text="aaaaaa" />


    <TextView
        android:id="@+id/feed_detail_forward_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_detail_forward_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/feed_detail_forward_user_head"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/feed_detail_item_time_text_color"
        android:textSize="@dimen/common_text_size_12"
        tools:text="aaaaaa" />


    <com.redefine.richtext.RichTextView
        android:id="@+id/feed_detail_forward_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_detail_forward_user_nick"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="@dimen/common_item_margin_12"

        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/feed_detail_forward_user_head"
        android:textColor="@color/feed_detail_item_content_text_color"
        android:textSize="@dimen/common_text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_px1"
        android:layout_below="@id/feed_detail_forward_time"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/feed_detail_forward_user_head"
        android:background="@color/common_feed_bottom_ver_divider" />
</RelativeLayout>