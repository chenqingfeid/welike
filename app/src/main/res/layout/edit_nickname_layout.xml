<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_regist_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="19dp">

    <EditText
        android:id="@+id/et_regist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingLeft="17dp"
        android:paddingRight="42dp"
        android:singleLine="true"
        android:text="11111111"
        android:textColor="@color/color_45"
        android:textSize="@dimen/common_text_size_14" />


    <com.redefine.commonui.widget.progress.CircularProgressBar
        android:id="@+id/iv_regist_check_anim"
        style="?android:attr/progressBarStyle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:indeterminate="true"
        android:visibility="invisible"
        app:cpb_cap_round="true"
        app:cpb_color="@color/main_orange_dark"
        app:cpb_max_sweep_angle="300"
        app:cpb_min_sweep_angle="10"
        app:cpb_rotation_speed="1.0"
        app:cpb_stroke_width="1.7dp"
        app:cpb_sweep_speed="1.0" />


    <ImageView
        android:id="@+id/iv_regist_check_correct"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:scaleType="center"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_common_right" />
</RelativeLayout>