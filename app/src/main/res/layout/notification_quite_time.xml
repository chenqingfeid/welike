<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_setting_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include layout="@layout/common_action_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_b_t_shadow"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_mute_from_time"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/quite_time_from_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mute_from_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/notification_mute_time"
                android:textSize="@dimen/common_text_size_14"
                android:textStyle="bold"
                tools:text="From" />

            <TextView
                android:id="@+id/tv_mute_from_hours_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/notification_mute_time"
                android:textSize="@dimen/common_text_size_14"
                android:textStyle="bold"
                tools:text="22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=":"
                android:textColor="@color/notification_mute_time"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_mute_from_min_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/notification_mute_time"
                android:textSize="@dimen/common_text_size_14"
                android:textStyle="bold"
                tools:text="00" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_mute_end_time"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mute_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/notification_mute_time"
                android:textSize="@dimen/common_text_size_14"
                android:textStyle="bold"
                tools:text="To" />

            <TextView
                android:id="@+id/tv_mute_end_hours_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/notification_mute_time"
                android:textSize="@dimen/common_text_size_14"
                android:textStyle="bold"
                tools:text="07" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=":"
                android:textColor="@color/notification_mute_time"
                android:textSize="@dimen/common_text_size_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_mute_end_min_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/notification_mute_time"
                android:textSize="@dimen/common_text_size_14"
                android:textStyle="bold"
                tools:text="00" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/tv_notification_im_message_tips"
        android:layout_width="match_parent"
        android:layout_height="7dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/common_b_t_shadow"
        android:gravity="center">

        <com.redefine.commonui.widget.loopView.LoopView
            android:id="@+id/start_loopView"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:awv_textsize="18" />

        <com.redefine.commonui.widget.loopView.LoopView
            android:id="@+id/end_loopView"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:awv_textsize="18" />

    </LinearLayout>
</LinearLayout>