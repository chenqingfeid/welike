<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleProgress">
        <attr name="circle_progress" format="float"/>
        <attr name="circle_max" format="integer"/>

        <attr name="circle_unfinished_color" format="color"/>
        <attr name="circle_finished_color" format="color"/>

        <attr name="circle_finished_stroke_width" format="dimension"/>
        <attr name="circle_unfinished_stroke_width" format="dimension"/>

        <attr name="circle_text_size" format="dimension"/>
        <attr name="circle_text_color" format="color"/>

        <attr name="circle_prefix_text" format="string"/>
        <attr name="circle_suffix_text" format="string"/>
        <attr name="circle_text" format="string"/>

        <attr name="circle_background_color" format="color"/>

        <attr name="circle_inner_bottom_text" format="string"/>
        <attr name="circle_inner_bottom_text_size" format="dimension"/>
        <attr name="circle_inner_bottom_text_color" format="color"/>

        <attr name="circle_circle_starting_degree" format="integer" />
        <attr name="circle_show_text" format="boolean"/>
    </declare-styleable>
</resources>